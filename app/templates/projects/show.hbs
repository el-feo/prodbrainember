{{top-area title=name subtitle=billingCompany class="row" icon="fa fa-film"}}

<div class="container-fluid ">
	<div class="row-fluid">

		<div class="accordion col-md-6" id="accordion1">
      <div class="accordion-group">
        <div class="accordion-heading">
		      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapseOne">
		        Project Info <i class="fa fa-cog pull-right"></i>
		      </a>
		    </div>

		    <div id="collapseOne" class="accordion-body collapse">
		      <div class="accordion-inner">
		      	<div class="row">

			          <i class="fa fa-edit"></i>

			        <strong>{{billingCompany}}</strong>
						</div>

		        <div class="row-fluid">
		          <div class="col-md-4">
		            <address>
  		            {{billingAddress1}}
  		            {{billingAddress2}}
  		            {{billingCity}}
  		            {{billingState}}
    		          {{billingZip}}
      		        {{billingCountry}}
		            </address>
		          </div>

		          <div class="col-md-4">
		            <address>
  		            {{billingPhone}}<br>
		              {{billingFax}}<br>
		              {{billingEmail}}
		            </address>
		          </div>

		          <div class="col-md-4">
		            <p>
		              <strong>Project Start:</strong>
		                {{principalStart}}
		              <br>
		              <strong>Project End: </strong>
		                {{principalEnd}}
		              <br>
		              <strong>P.O. Start:</strong>
		                {{purchaseOrderStart}}
		            </p>
		          </div>
		        </div>

		      </div>
		    </div>
		  </div>
		</div>

		<div class="accordion col-md-3" id="accordion2">
		  <div class="accordion-group">
		    <div class="accordion-heading">
		      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
		        Tax Rates <i class="fa fa-cog pull-right"></i>
		      </a>
		    </div>
		    <div id="collapseTwo" class="accordion-body collapse">
		      <div class="accordion-inner" style="padding: 0px;">
		      	<table class="table table-normal" id="tableofrates">
				    <thead>
				      <tr>
				        <td style="width: 20px;">
								  <i class="fa fa-plus-sign-alt fa-large"></i>
								</td>
				        <td><span>Name</span></td>
				        <td><span>Rate</span></td>
				        <td style="width: 20px;"></td>
				      </tr>
				    </thead>
				    <tbody id="tax_rates_body">

				    </tbody>
				  </table>
		      </div>
		    </div>
		  </div>
		</div>

		<div class="accordion col-md-3" id="accordion3">
		  <div class="accordion-group">
		    <div class="accordion-heading">
		      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3" href="#collapseThree">
		        Currencies <i class="fa fa-cog  pull-right"></i>
		      </a>
		    </div>
		    <div id="collapseThree" class="accordion-body collapse">
		      <div class="accordion-inner" style="padding: 0px;" >
		        <table class="table table-normal" id="tableofrates">
				    <thead>
				      <tr>
				        <td style="width: 20px;">
								  <i class="fa fa-plus-sign-alt fa-large"></i>
								</td>
				        <td><span>Currency</span></td>
				        <td><span>Exchange Rate</span></td>
				        <td style="width: 20px;"></td>
				      </tr>
				    </thead>
				    <tbody id="exchange_rates_body">

				    </tbody>
				  </table>
		      </div>
		    </div>
		  </div>
		</div>
	</div>

	<div class="action-nav-normal">
    <div class="row-fluid">
	      <div class="col-sm-3 action-nav-button">
          <a href="#" title="New Puchase Order">
            <i class="fa fa-file-o"></i>
            <span>New Purchase Order</span>
          </a>
	        <span class="triangle-button green"><i class="fa fa-plus"></i></span>
	      </div>

	      <div class="col-sm-3 action-nav-button">
          <a href="#" title="New Crew">
            <i class="fa fa-group"></i>
            <span>Add Crew</span>
          </a>
	        <span class="triangle-button green"><i class="fa fa-plus"></i></span>
	      </div>

			  <div class="col-sm-3 action-nav-button">
          <a href="#" title="New Vendor">
            <i class="fa fa-barcode"></i>
            <span>Add Vendor</span>
          </a>
	        <span class="triangle-button green"><i class="fa fa-plus"></i></span>
	      </div>

				<div class="col-sm-3 action-nav-button">
          <a href="#" title="New Department">
            <i class="fa fa-sitemap"></i>
            <span>Add Department</span>
          </a>
	        <span class="triangle-button green"><i class="fa fa-plus"></i></span>
	      </div>
    </div>
  </div>

</div>
