<div class="accordion-inner">
  <div class="row">
    <div class="col-md-12">
      {{#link-to 'projects.edit' this=project}}<i class="fa fa-edit fa-2x"></i>{{/link-to}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <strong>{{billingCompany}}</strong>
    </div>
  </div>

  <div class="row-fluid">

    <div class="col-md-4">
      <address>
        {{billingAddress1}}
        {{billingAddress2}}
        {{billingCity}}
        {{billingState}}
        {{billingZip}}
        {{billingCountry}}
      </address>
    </div>

    <div class="col-md-4">
      <address>
        {{billingPhone}}<br>
        {{billingFax}}<br>
        {{billingEmail}}
      </address>
    </div>

    <div class="col-md-4">
      <p>
        <strong>Project Start:</strong>
          {{principalStart}}
        <br>
        <strong>Project End: </strong>
          {{principalEnd}}
        <br>
        <strong>P.O. Start:</strong>
          {{purchaseOrderStart}}
      </p>
    </div>

  </div>
</div>
